<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".counter_preson">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Passenger Information"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pl"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/plust" />

        <TextView
            android:id="@+id/number"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/me"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/meo" />

        <TextView
            android:id="@+id/adults"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="87dp"
            android:text="Adult(s)"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/plus1"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/plust"/>
        <TextView
            android:id="@+id/number1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="24sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/me1"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/meo"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Age(2-12)"/>
        <TextView
            android:id="@+id/child"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Child(ren)"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/plus2"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/plust"/>
        <TextView
            android:id="@+id/number2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="0"
            android:textSize="24sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/me2"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/meo"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Age(0-2)"/>

        <TextView
            android:id="@+id/infant"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="Infant(s)"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#CDDC39">
        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="OK"
            android:textSize="28sp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>